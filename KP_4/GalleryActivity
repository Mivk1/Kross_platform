package com.kp_4

import android.Manifest
import android.content.Intent
import android.content.pm.PackageManager
import android.net.Uri
import android.os.Bundle
import android.widget.Button
import android.widget.Toast
import androidx.appcompat.app.AppCompatActivity
import androidx.core.app.ActivityCompat
import androidx.core.content.ContextCompat
import androidx.recyclerview.widget.GridLayoutManager
import androidx.recyclerview.widget.RecyclerView

class GalleryActivity : AppCompatActivity() {

    private lateinit var galleryAdapter: GalleryAdapter
    private val images = mutableListOf<GalleryImage>()
    private val PICK_IMAGE_REQUEST = 1

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_gallery)

        setupRecyclerView()
        setupClickListeners()
    }

    private fun setupRecyclerView() {
        galleryAdapter = GalleryAdapter(images) { image ->
            Toast.makeText(this, "Изображение ${image.id}", Toast.LENGTH_SHORT).show()
        }

        val recyclerView = findViewById<RecyclerView>(R.id.galleryRecyclerView)
        recyclerView.layoutManager = GridLayoutManager(this, 3)
        recyclerView.adapter = galleryAdapter
    }

    private fun setupClickListeners() {
        val addImageButton = findViewById<Button>(R.id.addImageButton)
        val backButton = findViewById<Button>(R.id.backButton) // ДОБАВЛЕНО

        addImageButton.setOnClickListener {
            checkPermissionAndPickImage()
        }

        // ДОБАВЛЕН ОБРАБОТЧИК КНОПКИ НАЗАД
        backButton.setOnClickListener {
            finish() // Закрывает текущую активность и возвращает к предыдущей
        }
    }

    private fun checkPermissionAndPickImage() {
        // Проверяем разрешение для новых версий Android (API 33+)
        val permission = if (android.os.Build.VERSION.SDK_INT >= android.os.Build.VERSION_CODES.TIRAMISU) {
            Manifest.permission.READ_MEDIA_IMAGES
        } else {
            Manifest.permission.READ_EXTERNAL_STORAGE
        }

        if (ContextCompat.checkSelfPermission(this, permission) != PackageManager.PERMISSION_GRANTED) {
            // Показываем объяснение перед запросом разрешения
            if (ActivityCompat.shouldShowRequestPermissionRationale(this, permission)) {
                Toast.makeText(this, "Разрешение нужно для выбора изображений из галереи", Toast.LENGTH_LONG).show()
            }
            ActivityCompat.requestPermissions(this, arrayOf(permission), PICK_IMAGE_REQUEST)
        } else {
            pickImageFromGallery()
        }
    }

    // ОБНОВЛЕНО: Обработка результата разрешений
    override fun onRequestPermissionsResult(
        requestCode: Int,
        permissions: Array<out String>,
        grantResults: IntArray
    ) {
        super.onRequestPermissionsResult(requestCode, permissions, grantResults)
        if (requestCode == PICK_IMAGE_REQUEST && grantResults.isNotEmpty() &&
            grantResults[0] == PackageManager.PERMISSION_GRANTED) {
            pickImageFromGallery()
        } else {
            Toast.makeText(this, "Разрешение отклонено. Вы не можете добавлять изображения", Toast.LENGTH_LONG).show()
        }
    }

    private fun pickImageFromGallery() {
        val intent = Intent(Intent.ACTION_PICK)
        intent.type = "image/*"
        startActivityForResult(intent, PICK_IMAGE_REQUEST)
    }

    override fun onActivityResult(requestCode: Int, resultCode: Int, data: Intent?) {
        super.onActivityResult(requestCode, resultCode, data)
        if (requestCode == PICK_IMAGE_REQUEST && resultCode == RESULT_OK && data != null) {
            val imageUri = data.data
            if (imageUri != null) {
                val newImage = GalleryImage(imageUri = imageUri.toString())
                galleryAdapter.addImage(newImage)
            }
        }
    }
}
